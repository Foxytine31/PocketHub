<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/iv_avatar"
            style="@style/AvatarLarge"
            android:contentDescription="@string/avatar"
            tools:src="@drawable/app_icon"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp">

            <TextView
                android:id="@+id/tv_issue_author"
                style="@style/ListSubtitleText"
                android:maxLines="1"
                android:textColor="@color/inset_outer"
                android:textIsSelectable="true"
                android:textStyle="bold"
                tools:text="StefMa"/>

            <TextView
                android:id="@+id/tv_issue_creation_date"
                style="@style/ListSubtitleText"
                android:maxLines="1"
                android:textColor="@color/inset_outer"
                tools:text="opened 6 hours ago"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_issue_title"
        style="@style/ListTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:paddingBottom="10dp"
        android:paddingTop="5dp"
        android:textColor="@android:color/white"
        android:textIsSelectable="true"
        tools:text="Title"/>

</merge>
